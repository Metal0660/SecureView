<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Camera" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Base application theme. -->
        <item name="colorPrimary">@color/my_primary</item>
        <item name="colorPrimaryVariant">@color/my_primary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary Brand color -->
        <item name="colorSecondary">@color/my_secondary</item>
        <item name="colorSecondaryVariant">@color/my_secondary</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/my_primary</item>
    </style>

    <style name="Theme.SecureView" parent="Base.Theme.SecureView" />

    <style name="Theme.SecureView.Fullscreen" parent="Theme.SecureView">
        <item name="android:actionBarStyle">@style/Widget.Theme.SecureView.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.SecureView.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.SecureView.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SecureView.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SecureView.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>